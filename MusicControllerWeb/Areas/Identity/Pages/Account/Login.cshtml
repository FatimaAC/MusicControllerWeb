@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card-body">
    <h5 class="card-title text-center">Sign In</h5>
    
    <form class="form-signin" method="post">
        @*<div class="text-danger">@ViewData["AuthroizedEmail"]</div>*@
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-label-group">
            <input class="form-control" asp-for="Input.Email" placeholder="Email address" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <label asp-for="Input.Email"></label>
        </div>

        <div class="form-label-group">
            <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" required>
            <label asp-for="Input.Password" for="inputPassword"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="custom-control custom-checkbox mb-3">
            <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" id="customCheck1">
            <label asp-for="Input.RememberMe" class="custom-control-label" for="customCheck1"></label>
        </div>
        <button class="btn btn-lg btn-outline-success btn-block text-uppercase mb-2" type="submit">Log in</button>
        <p>
            Don't have an account?<a asp-page="./Register" class="text-primary text-decoration-none" asp-route-returnUrl="@Model.ReturnUrl"> Register </a> 
        </p>
        <hr class="my-4">
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
