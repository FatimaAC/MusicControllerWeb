@model TrackViewModel
@{
    ViewData["Title"] = "Edit";
}
<div class="row card-body">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6 border p-5 white-color">
        <h4 class="text-center">Add Track</h4><br />
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <input asp-for="PlaylistId" value="@Model.PlaylistId" type="hidden" />
            <div class="form-group">
                <label asp-for="TrackURL"></label>
                <input asp-for="TrackURL" class="form-control" placeholder="Enter TrackUrl">
                <span asp-validation-for="TrackURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime"></label>
                <input asp-for="StartTime" class="form-control" placeholder="Enter password">
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime"></label>
                <input asp-for="EndTime" class="form-control" placeholder="Enter password">
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success">Change</button>
        </form>
        <div>
            <br />
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
