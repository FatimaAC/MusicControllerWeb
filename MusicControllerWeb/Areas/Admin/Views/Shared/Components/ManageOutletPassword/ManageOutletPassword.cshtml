@model OutletPasswordsViewModel

    <div class="col-sm-6 border p-5">
        <h4 class="text-center">Change Password</h4><br />
        <form asp-action="ManagePassword" asp-route-id="Id">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="***********">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="**********">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div><br />
            <button type="submit" class="btn btn-success">Change</button>
        </form>
    </div>
